        <!-- jobs form -->
        <div class="grid grid-cols-1 grid-rows-4 text-3xl">
          <div class="grid w-full row-span-1">
            <!-- <h2 class="m-auto justify-left">What job are you interested in?</h2> -->

            <form
              action="/search/getJobData"
              method="GET"
              class="m-auto w-5/12"
            >
              <div class="mb-3 row-span-2">
                <label for="search" class="form-label"
                  >What job are you interested in ?</label
                >
                <input
                  type="text"
                  class="border-2 rounded-lg border-gray-500 form-control w-full text-3xl"
                  id="searchBox"
                  name="search"
                  autocomplete="off"
                />
              </div>
              <button
                id="submitButton"
                type="submit"
                class="relative inline-flex items-center justify-center p-0.5 mb-2 me-2 overflow-hidden text-sm font-medium text-gray-900 rounded-lg group bg-gradient-to-br from-purple-600 to-blue-500 group-hover:from-purple-600 group-hover:to-blue-500 hover:text-white dark:text-white focus:ring-4 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-800"
              >
                <span
                  class="relative px-5 py-2.5 transition-all ease-in duration-75 bg-white dark:bg-gray-900 rounded-md group-hover:bg-opacity-0"
                >
                  Search
                </span>
              </button>
              <div
                id="autoCompleteResults"
                class="bg-gray-800 p-2 rounded-lg invisible text-2xl"
              ></div>
            </form>

